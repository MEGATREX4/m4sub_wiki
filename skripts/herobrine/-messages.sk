function getRandomPoisonMessage() :: text:
    if {poison_messages::*} is not set:
        loadMessages()
    return random element of {poison_messages::*}

function getRandomDeathMessage() :: text:
    if {death_messages::*} is not set:
        loadMessages()
    return random element of {death_messages::*}

function getRandomHerobrinePrefix() :: text:
